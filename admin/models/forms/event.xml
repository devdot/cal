<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			size="10"
			readonly="true"
		/>

		<field
			name="name"
			type="text"
			label="COM_CAL_FIELD_NAME_LABEL"
			description="COM_CAL_FIELD_NAME_DESC"
			class="input-xxlarge input-large-text"
			size="32"
			required="true"
		 />
        
        <field
			name="start"
			type="calendar"
			label="COM_CAL_START"
			description="COM_CAL_START_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
            required="true"
            onchange="cal_resources_reload()"
		/>
        <field
			name="end"
			type="calendar"
			label="COM_CAL_END"
			description="COM_CAL_START_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
            required="true"
            onchange="cal_resources_reload()"
		/>
        
        <field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			size="45"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>
        <field
			name="catid"
			type="categoryedit"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			extension="com_cal"
			required="true"
			default=""
		/>
        <field
			name="location_id"
			type="locationedit"
			label="COM_CAL_LOCATION"
			description="COM_CAL_LOCATION_DESC"
			required="true"
			default=""
		/>
        <field
			name="resources_selector"
			type="resourceedit"
			label="COM_CAL_RESOURCE"
			description="COM_CAL_RESOURCE_DESC"
			default=""
		/>
        <field
			name="resources"
			type="resources"
			label="COM_CAL_RESOURCE"
			description="COM_CAL_RESOURCE_DESC"
			default=""
		/>
        <field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			default="1"
			id="published"
			class="chzn-color-state"
			size="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>

		</field>
        <field
			name="link"
			type="url"
            filter="url"
            validate="url"
			label="COM_CAL_FIELD_LINK_LABEL"
			description="COM_CAL_FIELD_LINK_DESC"
			class="input-xxlarge input-large-text"
			size="16"
		 />
        <field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			size="1"
		/>
        
        <field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			description="COM_CAL_FIELD_CREATED_BY_DESC"
            class="readonly"
            readonly="true"
		/>
        <field
			name="created"
			type="calendar"
			label="COM_CAL_FIELD_CREATED_LABEL"
			description="COM_CAL_FIELD_CREATED_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
            readonly="true"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="COM_CAL_FIELD_MODIFIED_DESC"
			class="readonly"
			size="22"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			description="COM_CAL_FIELD_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"
		/>
        
        <field name="articletext" type="editor"
			label="COM_CONTENT_FIELD_ARTICLETEXT_LABEL" description="COM_CONTENT_FIELD_ARTICLETEXT_DESC"
			filter="JComponentHelper::filterText" buttons="true" />
        
        <field 
            name="make_recurring"
            type="checkbox"
            label="COM_CAL_FIELD_MAKE_RECURRING"
            description="COM_CAL_FIELD_MAKE_RECURRING_DESC"
            value="false"
            onchange="cal_recurring_make()"
            filter="boolean" 
        />
        <field 
            name="stop_recurring"
            type="checkbox"
            label="COM_CAL_FIELD_STOP_RECURRING"
            description="COM_CAL_FIELD_STOP_RECURRING_DESC"
            value="false"
            onchange="cal_recurring_stop()"
            filter="boolean" 
        />

	</fieldset>
     <fields name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
		<fieldset name="jmetadata"
			label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
               <field
			name="metakey"
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL"
			description="JFIELD_META_KEYWORDS_DESC"
			rows="3"
			cols="30"
		 />

		<field
			name="metadesc"
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL"
			description="JFIELD_META_DESCRIPTION_DESC"
			rows="3"
			cols="30"
		/>
		</fieldset>
	</fields>
    <fields>
		<field name="introtext" label="COM_CAL_FIELD_INTROTEXT" />
		<field name="fulltext" label="COM_CAL_FIELD_FULLTEXT" />
	</fields>
</form>
